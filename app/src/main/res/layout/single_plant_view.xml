<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/plant_difficulty"
        android:layout_width="22dp"
        android:layout_height="50dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="0dp"
        android:background="#ffb8251a"
        android:singleLine="true"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/plant_name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/plant_icon"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/PlantBild"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp" />


    <TextView
        android:id="@+id/latin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/latin_name"
        android:textSize="15sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plant_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/plant_info_txt"
                android:textSize="15sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/plant_how_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/plant_how_to"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/plant_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/usage"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/plant_good_to_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_usage"
                android:padding="5dp"
                android:text="Good to know"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/plant_harverst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_good_to_know"
                android:padding="5dp"
                android:text="Harverst"
                android:textSize="15sp"
                />
<!--
            <TextView
                android:id="@+id/plant_habitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/habitat"
                android:textStyle="bold"
                android:typeface="sans" />
-->
            <TextView
                android:id="@+id/plant_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                android:autoLink="web"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>