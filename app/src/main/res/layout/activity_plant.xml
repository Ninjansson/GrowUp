<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androids.growup.PlantActivity"
    tools:ignore="MergeRootFrame">


    <TextView
        android:id="@+id/plant_name"
        android:padding="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Plant Name"
        android:typeface="sans"/>

    <TextView
        android:layout_width="50px"
        android:layout_height="50px"
        android:id="@+id/plant_difficulty"
        android:layout_alignBaseline="@+id/plant_name"
        android:layout_alignBottom="@+id/plant_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:singleLine="true"
        android:background="#FF0000" />

    <TextView
        android:id="@+id/latin_name"
        android:textStyle="italic"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_name"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:text="Plant Latin Name" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/latin_name" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <TextView
        android:id="@+id/plant_info"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latin_name"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:text="New Text" />

            <TextView
                android:id="@+id/plant_how_to"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_info" />

            <TextView
                android:id="@+id/plant_usage"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_how_to" />
    <TextView
        android:id="@+id/plant_habitat"
        android:padding="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_info"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:typeface="sans"/>

    <Switch
        android:id="@+id/toggle_push"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_habitat"
        android:layout_centerHorizontal="true"
        android:thumb="@drawable/icon_apple"
        android:text="Pushnotiser"
        android:textStyle="bold"
        android:padding="10dp"
        android:typeface="sans"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toggle_push"
            android:layout_centerHorizontal="true"
            android:text="LÃ¤gg till"
            android:id="@+id/button_savePlant" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

