<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androids.growup.PlantActivity"
    tools:ignore="MergeRootFrame">


    <TextView
        android:id="@+id/plant_name"
        android:padding="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/latin_name"
        android:textStyle="italic"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_name"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:text="New Text" />

    <TextView
        android:id="@+id/plant_info"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latin_name"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:text="New Text" />

    <TextView
        android:id="@+id/plant_habitat"
        android:padding="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_info"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:typeface="sans"/>

    <Switch
        android:id="@+id/toggle_push"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_habitat"
        android:layout_centerHorizontal="true"
        android:thumb="@drawable/icon_apple"
        android:text="Pushnotiser"
        android:textStyle="bold"
        android:padding="10dp"
        android:typeface="sans"/>

</RelativeLayout>

