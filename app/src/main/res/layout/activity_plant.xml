<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androids.growup.PlantActivity"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Plant Name"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/plant_icon"
        android:layout_width="96px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/plant_difficulty"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignBaseline="@+id/plant_name"
        android:layout_alignBottom="@+id/plant_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/plant_name"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:background="#FF0000"
        android:singleLine="true" />

    <TextView
        android:id="@+id/latin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plant_icon"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Plant Latin Name"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latin_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plant_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/latin_name"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="Info"
                android:textAlignment="center"
                android:textSize="15sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/plant_how_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_info"
                android:padding="5dp"
                android:text="How to"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/plant_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_how_to"
                android:padding="5dp"
                android:text="Usage"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/plant_habitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_info"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="Habitat"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plant_habitat"
            android:layout_centerHorizontal="true"
            android:text="LÃ¤gg till"
            android:id="@+id/button_open_popup" />


            <TextView
                android:id="@+id/plant_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_habitat"
                android:autoLink="web"
                android:padding="5dp"
                android:text="@string/Link"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

