<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context="androids.growup.SettingsActivity">


    <ImageView
        android:id="@+id/pushnotiser_bild"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/notifications"

        android:contentDescription="@string/pushnotiser" />

    <TextView
        android:id="@+id/pushnotiser_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/pushnotiser_bild"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="@string/push_notiser" />

</RelativeLayout>
